<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4"> <img src="/assets/img/BobsBurgers.png"></h1>
    <p class="lead">Welcome to Bob's Burgers!</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         Can I take your order?
        </div>
        <!--Create/add burger form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Place order here:</label>
              <input type="text" class="form-control" id="burgerOrder" placeholder="">
            </div>
            <button class="btn btn-primary" type="submit">Place order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         Burgers
        </div>
        <!--Div to hold burgers that have not been devoured yet-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
      <div class="mt-4">
        <h4>{{burger_name}}</h4>
        <!--Devour me button-->
        <button class="change-devour btn btn-primary" data-id="{{id}}" data-newdevour="{{devour}}">
          <img src="/assets/img/devour.png" width="25px height=25px" class="mr-2"> Devour me
        </button>
      </div>
    </div>

   <div class="col-md-6 mt-4">
      <div class="card devoured-card">
        <div class="card-header text-white" id="devoured-card-header">
         Devoured burgers
        </div>
        <!--put burger here when a burger has been devoured -->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
      <div class="mt-4">
        <h4 class="devoured-burger-name">{{burger_name}}</h4>

         <!--Throw away burger button-->
        <button class="delete-burger btn btn-primary" data-id="{{this.id}}"><i class="far fa-trash-alt"></i> Throw away</button>
      </div>
  </div>
